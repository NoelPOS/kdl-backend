# Application
NODE_ENV=development
PORT=3001
DATABASE_ENABLED=true

# Database Configuration (for Neon DB, you mainly need DATABASE_URL)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Legacy DB config (not needed with DATABASE_URL, but keeping for reference)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=123456
DB_NAME=nest-starter

# JWT Configuration
JWT_SECRET=your-actual-jwt-secret-here
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-actual-jwt-refresh-secret-here
JWT_REFRESH_EXPIRATION=7d

# Email Service
RESEND_API_KEY=your-resend-api-key-here

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Swagger
SWAGGER_ENABLED=true 